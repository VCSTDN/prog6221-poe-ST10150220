<Page x:Class="PROG6221Part3.AddRecipe"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROG6221Part3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="LightPink"
      Title="AddRecipe">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Recipe Name:" Margin="0,0,0,10"/>
            <TextBox x:Name="txtRecipeName" Width="300" Margin="0,0,0,20"/>
            <TextBlock Text="Number of Ingredients:" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox Name="txtNumIngredients" Width="100" Margin="0,0,0,20"/>

            <TextBlock Text="Number of Steps:" Margin="0,0,0,10"/>
            <TextBox Name="txtNumSteps" Width="100" Margin="0,0,0,20"/>

            <Button Content="Generate Form" Click="GenerateForm_Click" HorizontalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="formPanel" Margin="10">
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
