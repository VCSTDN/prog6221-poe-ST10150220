<Page x:Class="PROG6221Part3.DisplayRecipe"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROG6221Part3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="DisplayRecipe">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>

            <RowDefinition/>

            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="black">
            <TextBlock Foreground="White" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top">
        <Run Text="All Recipes" FontSize="25"/>
            </TextBlock>
        </Border>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="formPanel" Margin="10">
            </StackPanel>
        </ScrollViewer>

        <TextBlock x:Name="txtDisplayRecipeDetails" Grid.Row="1" Margin="10"
                   TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Page>
